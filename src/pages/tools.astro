---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import CallToAction from "../components/CallToAction.astro";
import Icon from "../components/Icon.astro";
import Logo from '../../public/assets/logo.svg';
import tools from './tools/tools.json';
---
<BaseLayout
        title="Free Tools to Boost Your Online Performance or use in your AI projects"
        description="Enhance your website with free tools for SEO, content extraction, email generation, and more."
>
    <main class="wrapper stack gap-12">
        <Hero
                title="Free Tools"
                tagline="Explore my list of tools to enhance website performance and streamline workflows. "
                align="center"
        />
        <div class="mx-auto max-w-screen-xl px-4 py-8 sm:py-16 lg:px-6 lg:py-24">
            {tools.map((tool, index) => (
                    <div class="mx-auto items-center gap-8 px-4 py-8 lg:grid lg:grid-cols-2 lg:px-6 lg:py-16">
                        <div class={`text-gray-500 dark:text-gray-400 sm:text-lg ${index % 2 !== 0 && 'lg:order-2'}`}>
                            <h2 class="mb-4 text-4xl " title={tool.title}>
                                {tool.title}
                            </h2>
                            <h3 class="mb-4 text-2xl" title={tool.subtitle}>
                                {tool.subtitle}
                            </h3>
                            <h4 class="text-2xl mb-5">
                                {tool.description}
                            </h4>
                            <CallToAction title={tool.title} href={tool.link}>
                                {tool.cta}
                                <Icon icon="arrow-right" size="1.2em"/>
                            </CallToAction>
                        </div>
                        <div class="mt-8 grid grid-cols-1 gap-4 lg:mt-0">
                            <img src={tool.hero} alt={tool.title} class="w-full rounded-lg" />
                        </div>
                    </div>
            ))}
        </div>
    </main>
</BaseLayout>
